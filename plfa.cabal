cabal-version:      2.2
name:               plfa
version:            20.10
description:        Programming Language Foundations in Agda
homepage:           https://plfa.inf.ed.ac.uk
license-file:       LICENSE
author:             Wen Kokke
copyright:          Â© 2017-2020 Wen Kokke, Jeremy G. Siek, and Philip Wadler
category:           Web
build-type:         Simple

common plfa-common
  build-depends:       Agda == 2.6.2
                     , base
                     , shake
  default-language:    Haskell2010
  default-extensions:  ImportQualifiedPost
                     , LambdaCase
                     , RecordWildCards

library
  import:              plfa-common
  hs-source-dirs:      lib
  exposed-modules:     PLFA.Agda
                     , PLFA.Data.ByteString
                     , PLFA.Data.Text
                     , PLFA.CSS
  other-modules:       General.Extra
  build-depends:       bytestring
                     , charsetdetect
                     , data-default-class
                     , directory
                     , hsass >= 0.3.0
                     , hasmin
                     , mtl
                     , regex-tdfa
                     , text
                     , text-icu >= 0.7.1.0

executable site
  import:              plfa-common
  main-is:             app/Main.hs
  build-depends:       mustache
                     , pandoc
                     , shake
                     , text
                     , plfa

